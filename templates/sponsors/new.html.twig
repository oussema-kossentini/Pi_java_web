{% extends 'Template.html.twig' %}

{% block title %}New Sponsors{% endblock %}
{% block body %}

   
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Ajouter un Sponsor</h1>
                            </div>
                            {{form_start(form,{'attr':{'novalidate':'novalidate' , 'class' : 'user' }})}}

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {% if form_errors(form.nomSponsor) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.nomSponsor) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.nomSponsor,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nom Sponsor' } }) }}
                                </div>

                                <div class="col-sm-6">
                                    {% if form_errors(form.descriptionSponsor) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.descriptionSponsor) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.descriptionSponsor,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Description Sponsor'} }) }}
                                </div>

                            </div>

                            <button class="btn btn-primary btn-user btn-block">{{ button_label|default('Save') }}</button>

                            {# <a href="login.html" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </a> #}
                            <hr>

                            {{ form_end(form) }}
                            <hr>
                            <div class="text-center">
                                <a href="{{ path('app_sponsors_index') }}">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}