{% extends 'Template.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <tbody>
            <tr>
                <th>Id Offre</th>
                <td>{{ offre.idOffre }}</td>
            </tr>
            <tr>
                <th>Date Debut</th>
                <td>{{ offre.dateDebut ? offre.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date Fin</th>
                <td>{{ offre.dateFin ? offre.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Remise</th>
                <td>{{ offre.remise }}</td>
            </tr>
            <tr>
                <th>Nom du sponsor</th>
                <td>{{ offre.getNomSponsor }}</td>
            </tr>
        </tbody>
    </table>
 
<a style="justify-content: center;
    display: inline-flex;
    width: 90px!important;
    height: 35px;
    background-color: #4c71de;
    color: white;
    padding-top: 5px;
    border-radius: 10px;
    margin: 0px 3px 0px 3px;" class="btn btn-primary" href="{{ path('app_offre_edit', {'idOffre': offre.idOffre}) }}" margin-right: 10px>edit</a>
<form style="width: 4px;margin: 0px 3px 0px 3px; " method="post" action="{{ path('app_offre_delete', {'idOffre': offre.idOffre}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.idOffre) }}">
                                        <button style="justify-content: center;
    display: inline-flex;
    width: 90px!important;
    height: 35px;
    background-color: #fd3838;
    color: white;
    padding-top: 5px;
    border-radius: 10px;"  class="btn">Delete</button>
                                    </form>
 
