{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}

    <h1>Facture</h1>
    
<div id="facture-container">
    <table class="table"id='myTable'>
        <thead>

            <tr>
                <th>Id</th>
                <th>Cin</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Ville</th>
                <th>Date</th>
                <th>Prix</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        <input type="search" id="myInput" class="form-control pl-6" placeholder="Search "/><script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script><script>$(document).ready(function () {$("#myInput").on("keyup", function () {var value = $(this).val().toLowerCase();$("#myTable tr ").filter(function () {$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)});})});</script>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.cin }}</td>
                <td>{{ facture.nom }}</td>
                <td>{{ facture.prenom }}</td>
                <td>{{ facture.ville }}</td>
                <td>{{ facture.date ? facture.date|date('Y-m-d') : '' }}</td>
                <td>{{ facture.prix }}</td>
                <td>{{ facture.status }}</td>
                <td>
                    <a href="{{ path('app_facture_show', {'id': facture.id}) }}" class="btn btn-outline-primary">show</a>
                    <a href="{{ path('app_facture_edit', {'id': facture.id}) }}" class="btn btn-outline-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <style>
    .btn-primary + .btn-primary {
      margin-bottom: 10px;
    }
  </style>
  <div>
    <a href="{{ path('app_facture_new') }}" class="btn btn-secondary ">Create new</a>
    <a href="{{ path('app_facture_sort') }}" class="btn btn-secondary" id="sort-button">Trier par prix</a>
    <a href="{{ path('calculer_total') }}" class="btn btn-secondary">Calculer</a>
    <input type="text" class="form-contr
                ol" id="total" name="total"placeholder="Total en dinars..." value="{{ total ?? '' }}" readonly>
</div>
    <script>
        $(document).ready(function() {
  $('#sort-button').on('click', function(e) {
    e.preventDefault();
    $.ajax({
      url: $(this).attr('href'),
      type: 'GET',
      dataType: 'json',
      success: function(response) {
        $('#facture-container').html(response.html);
      },
      error: function(xhr, status, error) {
        console.log(error);
      }
    });
  });
});
